          transform: translateX(-50%);
  height: 200rpx;
  width: 200rpx;
}
.pay-success-container .top-box .success-text {
  color: white;
  position: absolute;
  top: 180rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  font-size: 50rpx;
}
