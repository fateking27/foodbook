  position: relative;
  width: 100%;
  height: 550rpx;
  margin-bottom: 150rpx;
}
.pay-success-container .top-box .bgi {
  position: absolute;
  top: 0;
  width: 100%;
  height: 550rpx;
}
.pay-success-container .top-box .yesi {
  position: absolute;
  top: 50rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  height: 96rpx;
  width: 96rpx;
}
.pay-success-container .top-box .circlei {
  position: absolute;
  bottom: -50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  height: 314rpx;
  width: 314rpx;
}
.pay-success-container .top-box .iconi {
  position: absolute;
  bottom: -75rpx;
  left: 50%;
