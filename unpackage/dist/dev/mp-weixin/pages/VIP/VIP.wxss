.content .head {
  width: 100%;
  height: 100pt;
  color: #fff;
  background-image: url("http://localhost:4000/public/images/ditu@2x.png");
  display: flex;
  flex-wrap: wrap;
}
.content .head .title {
  padding-top: 30px;
  font-size: 20px;
  margin: 0 auto;
}
.content .head .tags {
  width: 100%;
  height: 120rpx;
  white-space: nowrap;
}
.content .head .tags .tag {
  display: inline-block;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 14px;
  padding: 0px 10px;
}
.content .vip_card {
  width: 95%;
  height: 150pt;
  background-color: aqua;
  border-radius: 10px;
  margin: 0 auto;
  margin-top: 10px;
  background-image: radial-gradient(circle, #3f414a, #23242c);
}
.content .vip_card .content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20px;
}
.content .vip_card .content .being_vip .welcom {
  display: flex;
  justify-content: space-between;
}
.content .vip_card .content .being_vip .welcom ._span {
  color: #a87a5b;
  background-color: #edc9ae;
  padding: 2px 15px;
  font-size: 12px;
  font-weight: 1000;
  border-radius: 15px;
}
.content .vip_card .foot {
  height: 30%;
  background: linear-gradient(to bottom, black, #323232, #595959);
  border-radius: 10px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.content .vip_card .foot .serve_ {
  width: 60px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.content .free,
.content .recommend {
  width: 100%;
  margin: 0 auto;
  margin-top: 20px;
  margin-left: 10px;
}
.content .free ._abbr,
.content .recommend ._abbr {
  width: 100%;
  white-space: nowrap;
}
.content .free ._abbr .item,
.content .recommend ._abbr .item {
  width: 45%;
  height: 110pt;
  border-radius: 10px;
  margin-top: 10px;
  padding-right: 5px;
  display: inline-block;
}
.content .free ._abbr .item .watch,
.content .recommend ._abbr .item .watch {
  padding-right: 30px;
}
.content .free ._abbr .item image,
.content .recommend ._abbr .item image {
  width: 100%;
  height: 75%;
}
.content .container {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 10px;
}
.content .container .item {
  width: 48.5%;
  height: 150pt;
  border-radius: 10px;
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}
.content .container .item .watch {
  padding-right: 30px;
}
.content .container .item image {
  width: 100%;
  height: 70%;
}

