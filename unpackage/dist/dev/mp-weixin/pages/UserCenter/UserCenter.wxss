.content {
  background-color: #e8e8e8;
}
.content .user_head {
  width: 90%;
  margin: 0 auto;
  margin-top: 10px;
  display: flex;
  align-items: flex-end;
}
.content .user_head .head_img {
  background-color: #fff;
}
.content .user_head .head_img image {
  width: 80px;
  height: 80px;
}
.content .user_head .user_name {
  padding-left: 20px;
  padding-bottom: 15px;
}
.content .to_vip {
  width: 95%;
  height: 70px;
  margin: 0 auto;
  margin-top: 20px;
  background-image: url("http://localhost:4000/public/images/mengbanzu87@2x.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  justify-content: space-between;
}
.content .my_pr {
  width: 100%;
  height: 95px;
  background-color: #e8e8e8;
  display: flex;
  align-items: center;
}
.content .my_pr .pr_ {
  width: 100%;
  height: 70px;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}
.content .my_pr .pr_ image {
  width: 30px;
  height: 30px;
  display: block;
  margin-top: 5px;
}
.content .my_pr .pr_ .pr {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  width: 65px;
}
.content .foodbooks {
  width: 100%;
  background-color: #fff;
}
.content .foodbooks .show_more {
  width: 100%;
}
.content .foodbooks .show-more-click {
  height: 100%;
}
.content .foodbooks .list_items {
  width: 92%;
  margin: 0 auto;
  border-bottom: 1px solid #bdbdbd;
}
.content .foodbooks .list_items .item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  border-top: 1px solid #bdbdbd;
  padding: 10px 0;
}
.content .recommend {
  width: 100%;
  margin: 0 auto;
  margin-top: 10px;
}
.content .recommend ._abbr {
  width: 100%;
  white-space: nowrap;
  background-color: #fff;
  padding-bottom: 10px;
}
.content .recommend ._abbr .item {
  width: 40%;
  height: 110pt;
  border-radius: 10px;
  margin-top: 10px;
  padding-right: 0px;
  display: inline-block;
  text-align: center;
}
.content .recommend ._abbr .item image {
  width: 85%;
  height: 95%;
}
.content .group {
  margin-top: 10px;
  padding-bottom: 10px;
}

