.content .head {
  width: 100%;
  height: 110pt;
  color: #fff;
  background-image: url("http://localhost:4000/public/images/ditu@2x.png");
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: 100% 80%;
  position: fixed;
  z-index: 999;
  top: 0;
}
.content .head .title {
  font-size: 24px;
  font-weight: bold;
  padding-top: 25pt;
  padding-left: 15pt;
}
.content .head .title_ {
  font-size: 13px;
  padding-top: 7pt;
  padding-left: 15pt;
}
.content .head .search {
  width: 343px;
  margin: 0 auto;
  margin-top: 5px;
  box-shadow: 1px 1px 5px #c7c7c7;
  border-radius: 20px;
}
.content .swiper {
  width: 90%;
  margin: 0 auto;
  margin-top: 150px;
}
.content .swiper image {
  width: 100%;
  display: block;
}
.content .grid-text {
  font-size: 14px;
  color: #909399;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.content .show_img {
  height: 150pt;
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  border-radius: 10px;
}
.content .show_img ._img {
  border-radius: 7px;
}
.content .show_img .title {
  position: absolute;
  padding: 7px;
  background-color: #df9040;
  border-radius: 7px;
  margin-top: 7px;
  margin-left: 5px;
  opacity: 0.7;
  color: #fff;
  z-index: 9;
}
.content .container {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 10px;
  margin-top: 10px;
}
.content .container .item {
  width: 48.5%;
  height: 150pt;
  border-radius: 10px;
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}
.content .container .item .watch {
  padding-right: 30px;
}
.content .container .item image {
  width: 100%;
  height: 70%;
}

